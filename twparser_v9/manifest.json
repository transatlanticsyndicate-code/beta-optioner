{
  "manifest_version": 3,
  "name": "TradingView → Optioner Bridge",
  "version": "9.0.0",
  "description": "Парсинг опционов с TradingView + сбор всех данных по контракту",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://*.tradingview.com/*",
    "http://localhost:3000/*",
    "https://futures.optioner.online/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.tradingview.com/options/*"
      ],
      "js": [
        "src/utils.js",
        "src/storage.js",
        "src/parser.js",
        "src/optioner.js",
        "src/panel.js",
        "src/buttons.js",
        "src/liveUpdate.js",
        "src/dataCollector.js",
        "src/main.js"
      ],
      "css": ["tradingview.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "http://localhost:3000/*",
        "https://futures.optioner.online/*"
      ],
      "js": ["optioner.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "TradingView → Optioner Bridge"
  }
}
