# ============================================
# PRODUCTION Environment Variables
# ============================================
# Этот файл используется на сервере
# Скопируй в .env.production и заполни реальными значениями

# ============================================
# ИСКУССТВЕННЫЙ ИНТЕЛЛЕКТ
# ============================================
AI_PROVIDER=gemini
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash
GEMINI_TEMPERATURE=0.3

# ============================================
# БАЗА ДАННЫХ (PostgreSQL)
# ============================================
# На продакшене используй localhost (PostgreSQL на том же сервере)
# ВАЖНО: Используй сложный пароль!
DATABASE_URL=postgresql://your_user:your_strong_password@localhost:5432/optioner

# Base URL для генерации ссылок
BASE_URL=https://optioner.online

# ============================================
# НАСТРОЙКИ СЕРВЕРА
# ============================================
ENVIRONMENT=production
PORT=8000
ALLOWED_ORIGINS=https://optioner.online,https://www.optioner.online
LOG_LEVEL=INFO
