# ============================================
# ПРОДАКШЕН (Production)
# ============================================
# 
# Этот файл - шаблон для продакшен сервера
# На сервере создай .env.production и заполни реальными ключами
# ============================================

# Данные опционов
POLYGON_API_KEY=your_production_polygon_key

# AI провайдер (можно использовать Claude для лучшего качества)
AI_PROVIDER=gemini
GEMINI_API_KEY=your_production_gemini_key
CLAUDE_API_KEY=your_production_claude_key_optional

# Настройки сервера
ENVIRONMENT=production
PORT=8000

# CORS - укажи реальный домен
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Кэширование (5 минут для продакшена)
CACHE_TTL=300

# Логирование (только важные события)
LOG_LEVEL=WARNING

# База данных (PostgreSQL для продакшена)
DATABASE_URL=postgresql://user:password@localhost:5432/options_analyzer

# Telegram (для интеграции)
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_CHANNEL_ID=@your_channel_name

# ============================================
# БЕЗОПАСНОСТЬ
# ============================================

# Secret key для JWT токенов (сгенерируй случайную строку)
# Команда: openssl rand -hex 32
SECRET_KEY=your_secret_key_here_generate_random_string

# Разрешить ли HTTPS только (в продакшене = true)
FORCE_HTTPS=true

# ============================================
# МОНИТОРИНГ (опционально)
# ============================================

# Sentry DSN для отслеживания ошибок
SENTRY_DSN=

# Google Analytics ID
GA_TRACKING_ID=
