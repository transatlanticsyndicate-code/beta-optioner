.home-page {
  padding: 4rem 0;
  max-width: 1200px;
  margin: 0 auto;
}

.hero {
  text-align: center;
  margin-bottom: 6rem;
}

.tools-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 3rem;
  margin-bottom: 6rem;
}

.tool-card {
  border: 1px solid var(--border);
  padding: 2rem;
  transition: all 0.3s;
  display: flex;
  flex-direction: column;
  background: var(--bg-card);
}

.tool-card:hover {
  border-color: var(--primary);
}

.tool-card.coming-soon {
  opacity: 0.5;
}

.tool-card.coming-soon:hover {
  border-color: var(--border);
}

.tool-icon {
  font-size: 3rem;
  margin-bottom: 1.5rem;
}

.tool-title {
  font-size: 1.25rem;
  font-weight: 400;
  margin-bottom: 0.75rem;
  color: var(--text-primary);
}

.tool-description {
  color: var(--text-secondary);
  margin-bottom: 2rem;
  flex: 1;
  font-weight: 300;
}

.info-section {
  margin-top: 6rem;
  padding-top: 3rem;
  border-top: 1px solid var(--border);
}

.info-box {
  max-width: 800px;
  margin: 0 auto;
}

@media (max-width: 768px) {
  .tools-grid {
    grid-template-columns: 1fr;
  }
}
